extends ../layout.pug

block content
  .container.is-fluid.has-collapsable-nav
    .sidebar.is-collapsed
      aside
        .sidebar-label
          span= t('sidebar.nav')
        ul.sidebar-menu
          li
            a(href='/')
              i.icon-home
              span= t('nav.root')
          if !isGuest
            li
              a(href='/admin')
                i.icon-cog
                span= t('nav.account')
          else
            li
              a(href='/login')
                i.icon-unlock
                span= t('nav.login')
    tree
